extends base.pug


block content
    .form.form--forgot-password
        h2.title.margin-bottom-md Reset Your Password
        p Please enter your email address to receive a link to reset your password.
        form(action='/api/v1/users/forgotPassword', method='POST')
            input(type='email', name='email', placeholder='Your email', required)
            button.btn.btn--green(type='submit') Send Reset Link          